<!-- db/changelog-1.1-container.xml -->

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

  <!-- Create Container Table -->
    <changeSet id="1" author="your-name">
    <createTable tableName="purchase">
      <column name="id" type="BIGINT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
        <column name="reference" type="VARCHAR(500)"/>
        <column name="purchase_date" type="TIMESTAMP"/>
        <column name="image" type="VARCHAR(500)"/>
        <column name="total" type="NUMERIC"/>
        <column name="description" type="VARCHAR(500)"/>

        <column name="client_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>
        <column name="purchase_state_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>

    </createTable>
  </changeSet>

    <!-- Add foreign key constraint -->
  <changeSet id="2" author="your-name">
      <addForeignKeyConstraint
              baseTableName="purchase"
              baseColumnNames="client_id"
              referencedTableName="client"
              referencedColumnNames="id"
              constraintName="fk_purchase_client"/>
      <addForeignKeyConstraint
              baseTableName="purchase"
              baseColumnNames="purchase_state_id"
              referencedTableName="purchase_state"
              referencedColumnNames="id"
              constraintName="fk_purchase_purchase_state"/>

  </changeSet>

    <!-- Create Sequence for ContainerType -->
  <changeSet id="3" author="your-name">
    <createSequence sequenceName="purchase_seq" startValue="1" incrementBy="1"/>
  </changeSet>

  <!-- Load Data from CSV -->
  <changeSet id="4" author="your-name">
    <loadData
            file="classpath:/db/migration/data/money/Purchase.csv"
            tableName="purchase">
      <column name="id" type="NUMERIC"/>
          <column name="reference" type="STRING"/>
          <column name="purchase_date" type="TIMESTAMP"/>
          <column name="image" type="STRING"/>
          <column name="total" type="NUMERIC"/>
          <column name="description" type="STRING"/>
        <column name="client" type="BIGINT"/>
        <column name="purchase_state" type="BIGINT"/>
    </loadData>
  </changeSet>


</databaseChangeLog>
